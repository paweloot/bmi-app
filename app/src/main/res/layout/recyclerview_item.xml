<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="wrap_content"
        android:layout_width="match_parent"
>

    <TextView
            android:id="@+id/history_mass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/bmi_main_mass_kg" android:layout_marginStart="8dp"
            style="@style/ContentText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/bmi_font_normal"/>
    <TextView
            android:text="@string/bmi_main_height_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/history_height"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            style="@style/ContentText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/history_mass"
            android:textSize="@dimen/bmi_font_normal"/>
    <TextView
            android:text="@string/bmi_main_height_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/history_height_in"
            style="@style/ContentText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/history_height"
            android:textSize="@dimen/bmi_font_normal"/>
    <TextView
            tools:text="25.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_bmi_result" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/history_date"
            style="@style/ContentText"
            android:textSize="@dimen/bmi_font_huge"/>
    <TextView
            tools:text="13-07-2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_date" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/ContentText"
            android:textSize="@dimen/bmi_font_normal"/>
    <TextView
            tools:text="75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_mass_value" app:layout_constraintStart_toEndOf="@+id/history_mass"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            style="@style/ContentText"
            android:layout_marginStart="8dp" android:textSize="@dimen/bmi_font_normal"/>
    <TextView
            tools:text="182"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_height_value"
            app:layout_constraintStart_toEndOf="@+id/history_height" android:layout_marginStart="8dp"
            style="@style/ContentText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/history_mass_value"
            android:textSize="@dimen/bmi_font_normal"/>
    <TextView
            tools:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_height_in_value"
            style="@style/ContentText"
            app:layout_constraintStart_toEndOf="@+id/history_height_in" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/history_height_value"
            android:textSize="@dimen/bmi_font_normal"/>
    <View
            android:id="@+id/history_row_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/history_date" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
