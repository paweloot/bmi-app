<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="@dimen/bmi_layout_margin_top"
                android:layout_marginBottom="@dimen/bmi_layout_margin_bottom"
                android:layout_marginStart="@dimen/bmi_layout_margin_start_end"
                android:layout_marginEnd="@dimen/bmi_layout_margin_start_end">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bmi_normal" android:id="@+id/category_image"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:contentDescription="@string/bmi_info_category_img_description"/>
    <TextView
            android:text="@string/bmi_info_basic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/category_image"
            android:layout_alignBottom="@+id/category_image"
            android:layout_alignParentTop="true" android:paddingLeft="@dimen/bmi_text_padding"
            android:paddingRight="@dimen/bmi_text_padding" android:id="@+id/basic_info_text"
            android:fontFamily="@font/roboto" android:textSize="@dimen/bmi_default_text_size"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/category_text"
            android:text="@string/bmi_info_category_description"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/basic_info_text"
            android:padding="@dimen/bmi_text_padding" android:textSize="@dimen/bmi_header_text_size"
            android:fontFamily="@font/roboto_medium"/>
</RelativeLayout>