<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">
        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/main_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="250dp" app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/main_img_description" app:srcCompat="@drawable/asterix_obelix"/>
        <TextView
                android:text="@string/mass_label"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/mass_text"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/main_image" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/mass_input" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mass_text"/>
        <TextView
                android:text="@string/height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/height_text" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/mass_input" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/height_input" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/height_text" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmi_result_text" android:textSize="48sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/height_input" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/calculate_button"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmi_category_text"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bmi_result_text"/>
        <Button
                android:text="@string/calc_button_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/calculate_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:background="@color/colorAccent"
                android:textColor="@color/colorButtonText" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
