<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity" android:layout_marginStart="@dimen/bmi_layout_margin_start_end"
            android:layout_marginEnd="@dimen/bmi_layout_margin_start_end">
        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/main_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="250dp" app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/bmi_main_img_description" app:srcCompat="@drawable/asterix_obelix"
        />
        <TextView
                android:text="@string/bmi_main_mass_kg"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/mass_text"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/main_image" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:fontFamily="@font/roboto" android:textSize="@dimen/bmi_default_text_size"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/mass_edit" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mass_text"
                android:textSize="@dimen/edit_text_size"/>
        <TextView
                android:text="@string/bmi_main_height_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/height_text" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/mass_edit" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:textSize="@dimen/bmi_default_text_size"
                android:fontFamily="@font/roboto"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/height_edit" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/height_text" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="@dimen/edit_text_size"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmi_result_text" android:textSize="@dimen/bmi_result_text_size"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/height_edit" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bmi_category_text"
                android:textAlignment="center"
                android:textSize="@dimen/bmi_category_text_size"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bmi_result_text"/>
        <Button
                android:text="@string/bmi_main_calculate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/calculate_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/roboto_button" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bmi_category_text" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="1.0" android:textSize="@dimen/bmi_button_text_size"/>
        <ImageButton
                android:layout_width="@dimen/forward_button_size"
                android:layout_height="@dimen/forward_button_size" app:srcCompat="@drawable/ic_arrow_forward"
                android:id="@+id/forward_arrow_button" android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/height_edit" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/bmi_result_text"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.15"
                style="@style/roboto_button" android:scaleType="fitCenter"
                android:background="@drawable/circular_button_background"
                android:contentDescription="@string/bmi_about_forward_arrow_img_description" android:visibility="gone"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/bmi_category_text"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
